	t.mu.Lock()
	defer func() {
		t.closeDone()
		t.mu.Unlock()
	}()

	for !t.isCancelled() && t.err == nil  {
		cr := t.advance()
		if cr == nil {
			break
		}
		t.err = f(cr)
		cr.Release()
	}

